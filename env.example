# Database Configuration
POSTGRES_DB=waitlessq
POSTGRES_USER=waitlessq_user
POSTGRES_PASSWORD=your-secure-postgres-password

# Security - Generate these securely for production
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-key-change-in-production

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Environment
ENVIRONMENT=development

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration
# Required for client invitations and notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com
FROM_NAME=Your Business Name

# Client System Configuration
CLIENT_JWT_SECRET_KEY=your-client-jwt-secret-key
CLIENT_ACCESS_TOKEN_EXPIRE_MINUTES=10080
CLIENT_INVITATION_EXPIRE_DAYS=7
PWA_BASE_URL=https://your-domain.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO 