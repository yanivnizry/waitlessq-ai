# WaitLessQ Frontend Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API URL (without trailing slash)
# Development: http://localhost:8000
# Production: https://api.yourdomain.com
REACT_APP_API_URL=http://localhost:8000

# WebSocket URL for real-time features
# Development: ws://localhost:8000
# Production: wss://api.yourdomain.com
REACT_APP_WS_URL=ws://localhost:8000

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Application name and branding
REACT_APP_NAME=WaitLessQ
REACT_APP_VERSION=1.0.0

# Environment indicator
REACT_APP_ENVIRONMENT=development

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Enable/disable certain features based on environment
REACT_APP_ENABLE_DEVTOOLS=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Enable service worker for PWA features (production only)
REACT_APP_ENABLE_SW=false

# API request timeout (milliseconds)
REACT_APP_API_TIMEOUT=10000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable specific features
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_ERROR_REPORTING=false

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Add your third-party service keys here
# REACT_APP_GOOGLE_ANALYTICS_ID=
# REACT_APP_SENTRY_DSN=